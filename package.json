{
  "name": "metronome-wallet-core",
  "version": "1.1.2",
  "description": "Core logic to develop an Ethereum Metronome wallet",
  "keywords": [
    "crypto",
    "cryptocurrency",
    "ethereum",
    "metronome",
    "wallet"
  ],
  "license": "MIT",
  "author": "Gabriel Montes <gabriel@bloq.com>",
  "files": [
    "patches",
    "src"
  ],
  "main": "src/index.js",
  "repository": "autonomoussoftware/metronome-wallet-core",
  "scripts": {
    "check:outdated": "npm-check -i eslint-config-plugin* -i husky",
    "check": "dependency-check . && dependency-check . --unused --no-dev --ignore-module websocket-reconnector",
    "coverage": "nyc --lines 95 --functions 95 --branches 95 --reporter=lcov --reporter=text npm test",
    "lint": "eslint --cache .",
    "postinstall": "patch-package",
    "precommit": "npm run lint",
    "prepublishOnly": "npm run precommit && npm run prepush && tag-matches",
    "prepush": "npm run check",
    "test": "mocha"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "coincap-lib": "^1.0.0",
    "debug": "^4.0.1",
    "ethereumjs-wallet": "^0.6.2",
    "lodash": "^4.17.10",
    "metronome-contracts": "^1.4.2",
    "p-defer": "^1.0.0",
    "promise-all-props": "^1.0.1",
    "socket.io-client": "^2.1.1",
    "web3": "^1.0.0-beta.36",
    "websocket-reconnector": "^1.1.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "check-tag-matches": "^1.0.0",
    "dependency-check": "^3.2.0",
    "eslint": "^5.6.1",
    "eslint-config-bloq": "^1.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsdoc": "^3.7.1",
    "eslint-plugin-mocha": "^5.1.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prefer-arrow": "^1.1.3",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.1.1",
    "mocha": "^5.2.0",
    "npm-check": "^5.8.0",
    "nyc": "^13.0.1",
    "patch-package": "^5.1.1",
    "randomstring": "^1.1.5"
  }
}
